<xs:schema xmlns="hydrograph/ui/external/operation"
	targetNamespace="hydrograph/ui/external/operation" xmlns:xs="http://www.w3.org/2001/XMLSchema"
	xmlns:shm="hydrograph/ui/graph/schema" xmlns:cmn="hydrograph/ui/external/common"
	elementFormDefault="unqualified">

	<xs:import schemaLocation="../Schema.xsd" namespace="hydrograph/ui/graph/schema" />

	<xs:import schemaLocation="common.xsd" namespace="hydrograph/ui/external/common" />

	<xs:element name="externalOperations">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="externalOperations" type="externalOperation" maxOccurs="1" minOccurs="0" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:complexType name="externalOperation">
			<xs:sequence>
				<xs:element name="operation" type="operation" minOccurs="1" maxOccurs="1"/>
			</xs:sequence>
	</xs:complexType>

	<xs:complexType name="operation">
		<xs:sequence>
			<xs:element name="inputFields" type="cmn:input-fields"
				minOccurs="0" />
			<xs:element name="outputFields" type="cmn:operation-output-fields"
				minOccurs="0" />
			<xs:element name="properties" type="cmn:properties"
				minOccurs="0" />
		</xs:sequence>
		<xs:attribute name="id" type="xs:string" use="required" />
		<xs:attribute name="class" type="xs:string" use="optional" />
	</xs:complexType>

</xs:schema>
<p:graph name="Mainjob" xmlns:it="hydrograph/engine/jaxb/inputtypes"
		 xmlns:ot="hydrograph/engine/jaxb/outputtypes"
		 xmlns:op="hydrograph/engine/jaxb/operationstypes"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="hydrograph/engine/jaxb/main"
		 xsi:schemaLocation="hydrograph/engine/jaxb/main ../../../../hydrograph.engine.core/src/main/resources/newxmlschema/main/main.xsd ">
	
	<inputs id="input1" batch="0" xsi:type="it:textFileDelimited">
		<outSocket id="out0">
			<schema name="schema1">
				<includeExternalSchema uri="testData/XMLFiles/outputSubjob/SchemaForSubjob.xml" />
			</schema>
		</outSocket>
		<path uri="testData/Input/delimitedInputFileForSubjob" />
		<delimiter value="," />
		<hasHeader value="false" />
	</inputs>
	
	<operations id="reformat" xsi:type="op:transform" batch="0">
		<inSocket fromComponentId="input1" fromSocketId="out0" id="in0" />
		<operation id="opt1" class="hydrograph.engine.test.TransformTest">
			<inputFields>
				<field name="name" inSocketId="in0" />
			</inputFields>
			<outputFields>
				<field name="new_name" type="java.lang.String" />
			</outputFields>
		</operation>
		<outSocket id="out0">
			<passThroughField name="*" inSocketId="in0" />
			<mapField sourceName="city" name="new_city" inSocketId="in0" />
			<operationField name="name" operationId="opt1" />
		</outSocket>
	</operations>
	
	<outputs id="outputSubjob" batch="0" xsi:type="ot:subjob">
		<inSocket fromComponentId="reformat" fromSocketId="out0" id="in0">
			<schema name="schema1">
			</schema>
		</inSocket>
		<path uri="testData/XMLFiles/outputSubjob/OutputSubjob.xml" />
		<subjobParameter>
			<property name="ads" value="schema1" />
			<property name="path"
				value="testData/Output/subjob/outputSubjob" />
		</subjobParameter>
	</outputs>
	
</p:graph>
